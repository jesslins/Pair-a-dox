@{
    ViewData["Title"] = "Play Pair-a-dox";
}
<h1><span id="pair">Pair</span><span id="a">-a-</span><span id="dox">dox</span></h1>
<section class="scoreboard">
    <div class="score-container">
        Your Score:
        <span id="playerScore" class="score"></span>
    </div>
</section>
<div class="main-container">
    <main id="main-layout">
        <section class="button-container">
            <div id="addCards" class="button inactive">
                Add Cards
            </div>
            <div id="dox" class="button active">
                Dox!
            </div>
        </section>
        <ul id="cards">
            
        </ul>
    </main>
</div>

@section Scripts {
    <!-- AiDifficulty.js must come before singleplayer.js -->
    <script src="/js/AiDifficulty.js"></script>
    <script src="/js/singleplayer.js"></script>

}
